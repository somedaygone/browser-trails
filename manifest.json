{
  "manifest_version": 3,
  "name": "Browser Trails",
  "version": "0.3.5",
  "action": {
    "default_icon": {
      "32": "icons/icon32.png"
    },
    "default_title": "Browser Trails",
    "default_popup": "popup.html"
  },
  // "options_page": "options.html", 
  "permissions": ["webNavigation", "storage", "favicon", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
